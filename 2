  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 50px;
      background: linear-gradient(135deg, #FFDEE9 0%, #B5FFFC 100%);
    }
    input, button {
      padding: 10px;
      margin: 5px;
    }
    button {
      background-color: #6200EA;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      transition: 0.3s;
    }
    button:hover {
      background-color: #3700B3;
      transform: scale(1.1);
    }
    #result {
      font-size: 24px;
      font-weight: bold;
      color: #FF1744;
      animation: pop 0.5s ease-in-out;
      margin-top: 20px;
    }
    canvas {
      max-width: 500px;
      margin: auto;
    }
    @keyframes pop {
      0% { transform: scale(0.8); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
  </style>
