<body>
  <h1>バズ予測ツール</h1>
  <input id="text" placeholder="投稿を入れてね">
  <button onclick="predict()">予測する</button>
  <p id="result"></p>
  <canvas id="chart"></canvas>

  <!-- Chart.jsライブラリ -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    function predict() {
      let text = document.getElementById("text").value;
      let likes = 50; // 基本値

      // お得系ワード
      if (text.includes("無料") || text.includes("プレゼント")) {
        likes += 30;
      }
      // 短い投稿
      if (text.length < 20) {
        likes += 20;
      }
      // ハッシュタグ
      if (text.includes("#")) {
        likes += 10;
      }

      // 結果表示
      document.getElementById("result").innerHTML = "🔥予測いいね数: " + likes + "👍";

      // グラフ表示
      const ctx = document.getElementById('chart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['予測いいね数'],
          datasets: [{
            label: 'いいね数',
            data: [likes],
            backgroundColor: '#FF1744'
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    }
  </script>
</body>
</html>
